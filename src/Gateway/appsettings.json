{
  "AllowedHosts": "*",
  "KeyVault": { "Url": "https://kv-kairos.vault.azure.net/" },
  "Keys": {
    "MediatR": "Keys:MediatR"
  },
  "Database": {
    "Broker": {
      "ConnectionString": "Database:Broker:ConnectionString"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId", 
      "WithMachineName",
      "WithSensitiveDataMasking",
      "WithClientIp" 
    ]
  }
}
